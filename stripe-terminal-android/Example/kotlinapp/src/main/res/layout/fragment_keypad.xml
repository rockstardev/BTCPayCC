<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.KeypadFragment">

    <TextView
        android:id="@+id/amount_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:text="$0.00" 
        android:textSize="48sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/keypad_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:columnCount="3"
        android:rowCount="4" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_display">

        <!-- Keypad buttons will be added here programmatically or statically -->
        <!-- Example Static Button (repeat for 0-9, +, C) -->
        <com.google.android.material.button.MaterialButton android:id="@+id/key_1" android:layout_columnWeight="1" android:text="1" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_2" android:layout_columnWeight="1" android:text="2" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_3" android:layout_columnWeight="1" android:text="3" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_4" android:layout_columnWeight="1" android:text="4" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_5" android:layout_columnWeight="1" android:text="5" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_6" android:layout_columnWeight="1" android:text="6" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_7" android:layout_columnWeight="1" android:text="7" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_8" android:layout_columnWeight="1" android:text="8" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_9" android:layout_columnWeight="1" android:text="9" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_plus" android:layout_columnWeight="1" android:text="+" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_0" android:layout_columnWeight="1" android:text="0" style="@style/Widget.Example.Button" />
        <com.google.android.material.button.MaterialButton android:id="@+id/key_clear" android:layout_columnWeight="1" android:text="C" style="@style/Widget.Example.Button" />

    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/charge_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Charge"
        style="@style/Widget.Example.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
