<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTCPayCC.ConfirmPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="30" VerticalOptions="Center" HorizontalOptions="Center">
        <Label x:Name="ConfirmationLabel"
               Text="Waiting for tap..."
               FontSize="32"
               HorizontalOptions="Center" />

        <ActivityIndicator IsRunning="True" Color="Green" WidthRequest="100" HeightRequest="100"/>

        <Label x:Name="AmountLabel"
               Text=""
               FontSize="24"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>